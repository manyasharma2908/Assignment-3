class Solution {
    public boolean isPowerOfThree(int n) {
        for(int i=0;i<31;i++){
            int x =(int)Math.pow(3,i);
            if(n==1){
                return true;
            }
            if(x==n && x%3==0){   //max power within range
                return true;
    }
     }
                return false;
}
}
