class Solution {
    public boolean isPowerOfFour(int n) {
        for(int i=0;i<31;i++){
            int x=(int)Math.pow(4,i);
            if(n==1){
                return true;
            }
            if(x==n && x%4==0){
                return true;
            }
        }
        return false;
    }
}
